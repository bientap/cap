<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.castlabs.sdk.demos">

    <application
        android:name=".DemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="castlabs-license"
            android:value="${castlabsLicense}" />
        <!-- config Peer -->
        <meta-data
            android:name="com.peer5.ApiKey"
            android:value="9n9thtz67vkh03hzlf8n" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimplePlaybackDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_simple_playback_demo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PlayerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.castlabs.sdk.demos.MainActivity" />
        </activity>

        <activity
            android:name=".PlaybackWithSurfaceDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_simple_playback_demo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PlayerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.castlabs.sdk.demos.MainActivity" />
        </activity>
        <activity
            android:name=".SimplePlayServiceDemo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_simple_playback_demo"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PlayerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.castlabs.sdk.demos.MainActivity" />
        </activity>
    </application>

</manifest>
